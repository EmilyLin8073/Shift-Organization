<p id="notice"><%= notice %></p>
<h1>Workforce</h1>

<p>Logged in as <%= @user.name %> <%= link_to 'Log out', logout_path, method: :delete%></p>
<% if !@user.organization_id %>
  <p>You aren't a member of any organizations.</p>
  <p>Join an existing one or create a new one</p>
  <%= link_to 'Join Organization', organizations_path %> |
  <%= link_to 'Create Organization', new_organization_path%>
<% else %>
  <h2> <%= @organization.name %></h2>
  <%= link_to 'View Shifts', shifts_path %> |
  <%= link_to 'Edit', edit_organization_path(@organization)%> |
  <%= link_to 'Leave', leave_organization_path%>
<%  end %>

